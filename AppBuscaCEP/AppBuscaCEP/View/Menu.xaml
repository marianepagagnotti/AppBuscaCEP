<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBuscaCEP.View.Menu" Title="APP BUSCA CEP">
    <ContentPage.Content>
        <StackLayout Margin="20">

            <Label Text="Qual procedimento você deseja realizar?" FontSize="Subtitle" TextColor="Black" HorizontalTextAlignment="Center"/>

            <Button Text="Buscar Cep" Clicked="CepPorLogradouro" BackgroundColor="CadetBlue" TextColor="AntiqueWhite"/>

            <Button Text="Buscar Bairros" Clicked="BairrosPorCidade" BackgroundColor="CadetBlue" TextColor="AntiqueWhite"/>

            <Button Text="Buscar Cidade por Uf" Clicked="CidadePorUf" BackgroundColor="CadetBlue" TextColor="AntiqueWhite"/>

            <Button Text="Buscar Endereço por Cep" Clicked="EnderecoPorCep" BackgroundColor="CadetBlue" TextColor="AntiqueWhite"/>

            <Button Text="Buscar Endereço por Bairro e Cidade" Clicked="EnderecoPorBairroECidade" BackgroundColor="CadetBlue" TextColor="AntiqueWhite"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>